<Window x:Class="ST10263496_PROG6212_PART2_V1.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="400">
    <Grid>
        <Label Content="Username:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox x:Name="UsernameTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,35,0,0" Width="200"/>

        <Label Content="Password:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,75,0,0"/>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,100,0,0" Width="200"/>

        <Label Content="Role:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,140,0,0"/>
        <ComboBox x:Name="RoleComboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,165,0,0" Width="200">
            <ComboBoxItem Content="Lecturer"/>
            <ComboBoxItem Content="Approver"/>
            <ComboBoxItem Content="Administrator"/>
        </ComboBox>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,205,0,0">
            <Button Content="Login" Width="100" Click="LoginButton_Click"/>
            <Button Content="Exit" Width="100" Click="ExitButton_Click" Margin="5,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
